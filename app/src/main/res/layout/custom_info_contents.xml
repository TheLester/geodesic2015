<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/marker_info_window_title"
        android:textSize="@dimen/marker_info_window_title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/marker_info_window_coord"
        android:textSize="@dimen/marker_info_window_coord" />

    <TextView
        android:id="@+id/snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/marker_info_window_snippet"
        android:textSize="@dimen/marker_info_window_snippet"
        android:textStyle="italic" />

</LinearLayout>