<resources>

    <style name="AppTheme" parent="MaterialDrawerTheme.TranslucentStatus">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="colorControlNormal">@color/light_blue</item>
        <item name="colorControlActivated">@color/light_blue</item>
        <item name="colorControlHighlight">@color/light_blue</item></style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="problem_solving_edittext">
        <item name="android:inputType">numberDecimal|numberSigned</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_marginLeft">@dimen/size_small</item>
    </style>

    <style name="problem_solving_textview">
        <item name="android:layout_marginTop">@dimen/size_big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="problem_solving_textview_result">
        <item name="android:freezesText">true</item>
        <item name="android:padding">@dimen/size_tiny</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_marginLeft">@dimen/size_small</item>
        <item name="android:background">@drawable/answer_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
